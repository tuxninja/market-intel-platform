# Application Settings
APP_NAME="Market Intelligence Platform"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-minimum-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Database Configuration
POSTGRES_USER=marketintel
POSTGRES_PASSWORD=marketintel_dev
POSTGRES_DB=market_intelligence
DATABASE_URL=postgresql://marketintel:marketintel_dev@localhost:5432/market_intelligence

# Database Connection Pool
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Email Configuration (Optional - for notifications)
EMAIL_FROM=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# News APIs (Optional - enhances market data)
# Get free API key from: https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here

# Get free API key from: https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# ML Models
ML_MODEL_PATH=models
ENABLE_ML_ENHANCEMENT=true

# Digest Settings
MAX_DIGEST_ITEMS=20
HOURS_LOOKBACK=24

# Stripe Configuration (Optional - for subscriptions)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Docker Compose Settings
# These override the defaults in docker-compose.yml
COMPOSE_PROJECT_NAME=market-intel
